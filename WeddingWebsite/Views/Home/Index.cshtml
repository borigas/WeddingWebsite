@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron" style="overflow: auto;">
    <div class="col-xs-3 col-md-2">
        <img class="img-responsive" src="~/Content/HuskersLogo.png" />
    </div>
    <div class="col-xs-4 col-md-6 col-xs-offset-1">
        <h2 class="text-center">How we became a TEAM</h2>
    </div>
    <div class="col-xs-4 col-md-3">
        <img class="img-responsive" src="~/Content/TigersLogo.png" />
    </div>
</div>

<div class="row">
    <div class="col-md-12 col-lg-offset-1 col-lg-10 visible-lg-block visible-md-block">
        <div class="text-center center-block">
            <div id="stadium">
                <div id="field" class="mowed-grass"></div>
                <div id="in-field"></div>
                <div id="in-field-grass" class="mowed-grass"></div>
                <div id="batting-circle"></div>
                <div id="first-base" class="base">
                    <div class="pulse"></div>
                    <div class="action-area"></div>
                </div>
                <div id="second-base" class="base">
                    <div class="pulse"></div>
                    <div class="action-area" data-toggle="popover" title="Popover title" data-content="And here's some amazing content.">
                    </div>
                </div>
                <div id="thrid-base" class="base">
                    <div class="pulse"></div>
                    <div class="action-area"></div>
                </div>
                <div id="home-plate">
                    <div class="action-area"></div>
                </div>
                <div class="home-plate-pulse pulse"></div>
                <div id="base-lines"></div>
                <div id="pitchers-mound"></div>
                <div id="pitchers-plate"></div>
                <div id="first-circle" class="half-circle"></div>
                <div id="second-circle" class="half-circle"></div>
                <div id="third-circle" class="half-circle"></div>
                <div id="batters-box-right" class="batters-box"></div>
                <div id="batters-box-left" class="batters-box"></div>
                <div id="first-base-thing"></div>
            </div>
        </div>
    </div>
    <div class="col-xs-12 visible-xs-block visible-sm-block">
        <div class="panel panel-default" id="first-base-content">
            <div class="panel-heading">1st Met - 4/17/12</div>
            <div class="panel-body">
                We first met at Ben's softball game
            </div>
        </div>
        <div class="panel panel-default" id="second-base-content">
            <div class="panel-heading">1st Date - 7/17/12</div>
            <div class="panel-body">
                Our first date was to a Lincoln Saltdags baseball game on 7/17/12
            </div>
        </div>
        <div class="panel panel-default" id="third-base-content">
            <div class="panel-heading">Got Engaged - 7/17/12</div>
            <div class="panel-body">
                Ben proposed in the outfield before a Lincoln Saltdogs game on 7/22/14
            </div>
        </div>
        <div class="panel panel-default" id="home-plate-content">
            <div class="panel-heading">The Big Day - 6/13/14</div>
            <div class="panel-body">
                We will be married at 49ers field in Lincoln NE on 6/13/15
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script type="text/javascript">
        $(function () {
            var elements = $(".action-area");
            elements.each(function (i, element) {
                var popElement = $(element.parentElement);

                var contentPanelElement = $("#" + popElement.attr("id") + "-content");
                var headingElement = contentPanelElement.find(".panel-heading");
                var contentElement = contentPanelElement.find(".panel-body");
                var title = headingElement.html();
                var content = contentElement.html();

                popElement.popover({
                    title: title,
                    content: content
                });
            });
        })
    </script>
}